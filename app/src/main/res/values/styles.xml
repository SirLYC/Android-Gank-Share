<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Zoom">
        <item name="android:activityOpenEnterAnimation">@anim/photo_zoom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/photo_zoom_out</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
    </style>

    <style name="CategoryTabTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PostEditTextStyle">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

